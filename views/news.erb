  
<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital@0;1&display=swap" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.12.0/css/all.css" crossorigin="anonymous">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    
    <!-- Your own CSS -->
    <link rel="stylesheet" href="/styles.css">

    <title>Evanston Weather & News</title>
  </head>
  <body>
    
    <div class="jumbotron jumbotron-news jumbotron-fluid">
      <div class="container">
        <h1 class="display-4">Weater & News in Evanston, Illinois</h1 class="display-4">
        <p class="lead">Check out this awesome site</p>
      </div>
    </div>

    <hr class="my-4">
    <div class="container mt-6">
      <h1>Weather in Evanston, Illinois <i class="fas fa-cloud-meatball"></i></h1>
    </div>
          
        <div class="container mt-46">
        <p>
        <h4> "Today's Weather" </h4>
        </p>
        <% for todaysweather in @current %>
            <p><%= todaysweather %></p>
        <% end %>
        </div>

        <div class="container mt-6">
        <p>
        <h4>Weekly Forecast</h4>
        <% for days in @weekly %>
        <p><%= days %></p>
        <% end %>
        </p>
        </div>

    <hr class="my-4">

    <div class="container mt-6">
      <h1>Top Headlines <i class="far fa-newspaper"></i></h1>
    </div>

        <div class="container mt-6">
        <p>
        <% for story in @topstories %>
        <p><a href=<%= story %></a></p>
        <% end %>
        </p>
        </div>

    <hr class="my-4">

    <div class="container footer">
      <div class="row my-4">
        <div class="col-sm-6">
          <h6><a href=https://newsapi.org/>Source by NewsAPI</a></h6>
        </div>
      </div>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  </body>
</html>